# Public base URL of your site
NEXTAUTH_URL=https://commands.bromeolive.nl

# Auth secret (generate with: npx auth secret)
AUTH_SECRET=replace-me

# Twitch OAuth App credentials
TWITCH_CLIENT_ID=replace-me
TWITCH_CLIENT_SECRET=replace-me

# Your channel's broadcaster user id (not username!)
TWITCH_BROADCASTER_ID=replace-me

# Recommended: broadcaster refresh token so the server can verify Mod/VIP reliably
# Get a broadcaster refresh token with these scopes:
# - moderation:read
# - channel:read:vips
# (optional) channel:read:subscriptions
TWITCH_BROADCASTER_REFRESH_TOKEN=replace-me
